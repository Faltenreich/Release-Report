<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.appcompat.widget.Toolbar"
    tools:layout_width="match_parent"
    tools:layout_height="@dimen/toolbar_height"
    tools:background="?attr/colorPrimary"
    tools:contentInsetStartWithNavigation="0dp"
    tools:contentInsetStart="0dp">

    <TextView
        android:id="@+id/toolbarTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/margin_padding_size_large"
        android:paddingStart="@dimen/margin_padding_size_large"
        android:paddingRight="@dimen/margin_padding_size_large"
        android:paddingEnd="@dimen/margin_padding_size_large"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_large"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:lines="1"
        android:ellipsize="end"
        tools:text="@string/app_name"/>

</merge>