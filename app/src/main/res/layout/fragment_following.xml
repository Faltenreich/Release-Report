<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dateLabel"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        android:paddingStart="@dimen/margin_padding_size_large"
        android:paddingEnd="@dimen/margin_padding_size_large"
        android:gravity="center_vertical"
        tools:text="@tools:sample/date/mmddyy"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.faltenreich.release.ui.view.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="0dp"
        android:layout_height="240dp"
        app:compactCalendarBackgroundColor="?android:textColorPrimaryInverse"
        app:compactCalendarCurrentDayBackgroundColor="?android:textColorPrimaryInverse"
        app:compactCalendarCurrentDayTextColor="?colorPrimary"
        app:compactCalendarCurrentSelectedDayBackgroundColor="?colorAccent"
        app:compactCalendarCurrentSelectedDayTextColor="?android:textColorPrimaryInverse"
        app:compactCalendarDisplayOtherMonthDays="true"
        app:compactCalendarMultiEventIndicatorColor="?colorPrimary"
        app:compactCalendarOtherMonthDaysTextColor="?android:textColorTertiary"
        app:compactCalendarTextColor="?android:textColorPrimary"
        app:compactCalendarTextSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/dateLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="@dimen/margin_padding_size_small"
        android:paddingBottom="@dimen/standard_element_size_large"
        android:paddingStart="@dimen/margin_padding_size_small"
        android:paddingEnd="@dimen/margin_padding_size_small"
        android:clipToPadding="false"
        android:background="@color/translucent"
        tools:listitem="@layout/list_item_release_detail"
        app:layout_constraintTop_toBottomOf="@id/calendarView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <include
        layout="@layout/view_empty"
        android:id="@+id/emptyView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/listView"
        app:layout_constraintBottom_toBottomOf="@id/listView"
        app:layout_constraintStart_toStartOf="@id/listView"
        app:layout_constraintEnd_toEndOf="@id/listView"/>

</androidx.constraintlayout.widget.ConstraintLayout>