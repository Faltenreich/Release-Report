<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/coverImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="@string/aspect_ratio_portrait"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/typeImageView"
            android:layout_width="@dimen/dogear_medium"
            android:layout_height="@dimen/dogear_medium"
            android:background="@drawable/dogear_type"
            android:contentDescription="@null"
            android:padding="@dimen/dogear_medium_padding"
            app:layout_constraintStart_toStartOf="@+id/coverImageView"
            app:layout_constraintTop_toTopOf="@+id/coverImageView"
            tools:src="@drawable/ic_music"
            tools:tint="?attr/colorPrimary" />

        <ImageView
            android:id="@+id/subscriptionImageView"
            android:layout_width="@dimen/dogear_medium"
            android:layout_height="@dimen/dogear_medium"
            android:background="@drawable/dogear_subscription"
            android:contentDescription="@null"
            android:padding="@dimen/dogear_medium_padding"
            android:src="@drawable/ic_subscription_on"
            android:tint="@color/brown"
            app:layout_constraintEnd_toEndOf="@+id/coverImageView"
            app:layout_constraintTop_toTopOf="@+id/coverImageView" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/scrim_bottom"
            android:orientation="vertical"
            android:paddingStart="@dimen/margin_padding_size_small"
            android:paddingTop="@dimen/margin_padding_size_xxlarge"
            android:paddingEnd="@dimen/margin_padding_size_small"
            android:paddingBottom="@dimen/margin_padding_size_small"
            app:layout_constraintBottom_toBottomOf="@+id/coverImageView"
            app:layout_constraintEnd_toEndOf="@+id/coverImageView"
            app:layout_constraintStart_toStartOf="@+id/coverImageView">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="?android:textColorPrimaryInverse"
                android:textSize="@dimen/text_size_medium"
                tools:text="@tools:sample/lorem" />

            <TextView
                android:id="@+id/artistTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?android:textColorTertiaryInverse"
                android:textSize="@dimen/text_size_medium"
                tools:text="@tools:sample/lorem" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>