<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/releaseCoverImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            tools:src="@tools:sample/avatars"/>

        <ImageView
            android:id="@+id/releaseTypeImageView"
            android:layout_width="@dimen/image_size_xsmall"
            android:layout_height="@dimen/image_size_xsmall"
            android:layout_margin="@dimen/margin_padding_size_small"
            android:tint="@android:color/white"
            android:contentDescription="@null"
            app:layout_constraintTop_toTopOf="@+id/releaseCoverImageView"
            app:layout_constraintStart_toStartOf="@+id/releaseCoverImageView"
            tools:src="@drawable/ic_music"/>

        <TextView
            android:id="@+id/releaseNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_padding_size_large"
            android:paddingLeft="@dimen/margin_padding_size_small"
            android:paddingStart="@dimen/margin_padding_size_small"
            android:paddingRight="@dimen/margin_padding_size_small"
            android:paddingEnd="@dimen/margin_padding_size_small"
            android:paddingBottom="@dimen/margin_padding_size_small"
            android:background="@drawable/scrim_bottom"
            android:textColor="@android:color/white"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintBottom_toBottomOf="@+id/releaseCoverImageView"
            app:layout_constraintStart_toStartOf="@+id/releaseCoverImageView"
            app:layout_constraintEnd_toEndOf="@+id/releaseCoverImageView"
            tools:text="@tools:sample/lorem/random"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>