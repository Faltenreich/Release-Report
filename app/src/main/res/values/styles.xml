<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="AppTheme" parent="Theme.Light" />

    <style name="Theme.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/background_dark_tertiary</item>
        <item name="colorPrimaryDark">@color/background_dark_secondary</item>
        <item name="colorAccent">@color/background_dark_secondary</item>
        <item name="android:windowBackground">@color/background_light_primary</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:textColorPrimary">@color/text_light_primary</item>
        <item name="android:textColorSecondary">@color/text_light_secondary</item>
        <item name="backgroundColorPrimary">@color/background_light_primary</item>
        <item name="backgroundColorSecondary">@color/background_light_secondary</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="Theme.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/background_light_tertiary</item>
        <item name="colorPrimaryDark">@color/background_light_secondary</item>
        <item name="colorAccent">@color/background_light_secondary</item>
        <item name="android:windowBackground">@color/background_dark_primary</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:textColorPrimary">@color/text_dark_primary</item>
        <item name="android:textColorSecondary">@color/text_dark_secondary</item>
        <item name="backgroundColorPrimary">@color/background_dark_primary</item>
        <item name="backgroundColorSecondary">@color/background_dark_secondary</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ToolbarTitle" parent="@android:style/TextAppearance.Medium" />

    <style name="ToolbarPopup" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="CollapsingToolbarTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PaddingLayout">
        <item name="android:padding">@dimen/margin_padding_size_medium</item>
    </style>

    <style name="ListHeader">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/margin_padding_size_medium</item>
        <item name="android:paddingEnd">@dimen/margin_padding_size_medium</item>
        <item name="android:paddingTop">@dimen/margin_padding_size_small</item>
        <item name="android:paddingBottom">@dimen/margin_padding_size_small</item>
    </style>

</resources>