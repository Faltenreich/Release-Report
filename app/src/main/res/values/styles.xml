<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/background_light_secondary</item>
        <item name="colorPrimaryDark">@color/background_light_secondary</item>
        <item name="colorAccent">@color/background_dark_secondary</item>
        <item name="android:windowBackground">@color/background_light_primary</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:textColorPrimary">@color/text_light_primary</item>
        <item name="android:textColorSecondary">@color/text_light_secondary</item>
        <item name="backgroundColorPrimary">@color/background_light_primary</item>
        <item name="backgroundColorSecondary">@color/background_light_secondary</item>
    </style>

    <style name="Toolbar">
        <item name="elevation">0dp</item>
        <!-- Changes title style from bold to normal -->
        <item name="titleTextAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="CollapsingToolbarTitleExpanded" parent="@android:style/TextAppearance">>
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PaddingLayout">
        <item name="android:padding">@dimen/margin_padding_size_medium</item>
    </style>

    <style name="ListHeader">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/margin_padding_size_medium</item>
        <item name="android:paddingEnd">@dimen/margin_padding_size_medium</item>
        <item name="android:paddingTop">@dimen/margin_padding_size_small</item>
        <item name="android:paddingBottom">@dimen/margin_padding_size_small</item>
    </style>

</resources>