<?xml version="1.0" encoding="utf-8"?>

<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/main">

    <action
        android:id="@+id/open_release"
        app:destination="@+id/release_detail"
        app:enterAnim="@android:anim/fade_in"
        app:exitAnim="@android:anim/fade_out"
        app:popEnterAnim="@android:anim/fade_in"
        app:popExitAnim="@android:anim/fade_out">
        <argument
            android:name="releaseId"
            app:argType="string"/>
    </action>

    <fragment
        android:id="@+id/main"
        android:name="com.faltenreich.release.ui.fragment.MainFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/search_release"
            app:destination="@+id/release_search"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out">
            <argument
                android:name="query"
                app:argType="string"/>
        </action>
    </fragment>

    <fragment
        android:id="@+id/release_detail"
        android:name="com.faltenreich.release.ui.fragment.ReleaseDetailFragment"
        tools:layout="@layout/fragment_release_detail">
        <argument
            android:name="releaseId"
            app:argType="string"/>
    </fragment>

    <fragment
        android:id="@+id/release_search"
        android:name="com.faltenreich.release.ui.fragment.ReleaseSearchFragment"
        tools:layout="@layout/fragment_release_search">
        <argument
            android:name="query"
            app:argType="string"/>
    </fragment>

</navigation>