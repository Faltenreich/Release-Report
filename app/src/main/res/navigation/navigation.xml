<?xml version="1.0" encoding="utf-8"?>

<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/discover">

    <action
        android:id="@+id/open_release"
        app:destination="@+id/release"
        app:enterAnim="@android:anim/fade_in"
        app:exitAnim="@android:anim/fade_out"
        app:popEnterAnim="@android:anim/fade_in"
        app:popExitAnim="@android:anim/fade_out">
        <argument
            android:name="releaseId"
            app:argType="string"/>
    </action>

    <action
        android:id="@+id/open_date"
        app:destination="@+id/discover"
        app:enterAnim="@android:anim/fade_in"
        app:exitAnim="@android:anim/fade_out"
        app:popEnterAnim="@android:anim/fade_in"
        app:popExitAnim="@android:anim/fade_out">
        <argument
            android:name="date"
            app:argType="string"/>
    </action>

    <action
        android:id="@+id/open_search"
        app:destination="@+id/search"
        app:enterAnim="@android:anim/fade_in"
        app:exitAnim="@android:anim/fade_out"
        app:popEnterAnim="@android:anim/fade_in"
        app:popExitAnim="@android:anim/fade_out">
        <argument
            android:name="query"
            app:argType="string"/>
    </action>

    <dialog
        android:id="@+id/navigation"
        android:name="com.faltenreich.release.ui.fragment.NavigationFragment"
        tools:layout="@layout/fragment_navigation">
        <argument
            android:name="previousDestinationId"
            app:argType="integer"/>
    </dialog>

    <dialog
        android:id="@+id/date"
        android:name="com.faltenreich.release.ui.fragment.DatePickerFragment"/>

    <fragment
        android:id="@+id/spotlight"
        android:name="com.faltenreich.release.ui.fragment.SpotlightFragment"
        android:label="@string/spotlight"
        tools:layout="@layout/fragment_spotlight"/>

    <fragment
        android:id="@+id/discover"
        android:name="com.faltenreich.release.ui.fragment.DiscoverFragment"
        android:label="@string/releases"
        tools:layout="@layout/fragment_discover">
        <argument
            android:name="date"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null"/>
    </fragment>

    <fragment
        android:id="@+id/calendar"
        android:name="com.faltenreich.release.ui.fragment.CalendarFragment"
        android:label="@string/calendar"
        tools:layout="@layout/fragment_calendar"/>

    <fragment
        android:id="@+id/release"
        android:name="com.faltenreich.release.ui.fragment.ReleaseFragment"
        tools:layout="@layout/fragment_release">
        <argument
            android:name="releaseId"
            app:argType="string"/>
    </fragment>

    <fragment
        android:id="@+id/search"
        android:name="com.faltenreich.release.ui.fragment.SearchFragment"
        tools:layout="@layout/fragment_search">
        <argument
            android:name="query"
            app:argType="string"/>
    </fragment>

    <fragment
        android:id="@+id/preferences"
        android:name="com.faltenreich.release.ui.fragment.PreferenceFragment"
        android:label="@string/preferences"
        tools:layout="@layout/fragment_preference"/>

</navigation>